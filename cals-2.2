STUDENTGROUP {
   display: block;
   background-color: #f0f4f8;
   padding: 25pt;
   font-family: Arial, sans-serif;
}

GROUPHEADER {
   display: block;
   background: linear-gradient(to right, #003d7a, #0066cc);
   color: white;
   padding: 20pt;
   margin-bottom: 20pt;
   border-radius: 8pt;
   text-align: center;
}

UNIVERSITY {
   display: block;
   font-size: 14pt;
   font-weight: bold;
   margin-bottom: 5pt;
}

DEPARTMENT {
   display: block;
   font-size: 11pt;
   margin-bottom: 3pt;
   opacity: 0.95;
}

DIRECTION {
   display: block;
   font-size: 10pt;
   margin-bottom: 2pt;
   opacity: 0.9;
}

PROFILE {
   display: block;
   font-size: 10pt;
   margin-bottom: 8pt;
   opacity: 0.9;
}

GROUPNAME {
   display: block;
   font-size: 18pt;
   font-weight: bold;
   margin-bottom: 5pt;
}

YEAR {
   display: block;
   font-size: 11pt;
   font-style: italic;
}

STUDENTLIST {
   display: block;
}

STUDENT {
   display: block;
   margin-bottom: 12pt;
   padding: 15pt;
   background-color: #ffffff;
   border-left: 5pt solid #0066cc;
   border-radius: 4pt;
   box-shadow: 0 2pt 4pt rgba(0,0,0,0.1);
}

NUMBER {
   display: inline;
   background-color: #0066cc;
   color: white;
   padding: 3pt 8pt;
   border-radius: 3pt;
   font-weight: bold;
   font-size: 9pt;
   margin-right: 8pt;
}

FULLNAME {
   display: inline;
   font-size: 12pt;
   font-weight: bold;
   color: #003d7a;
}

FULLNAME::after {
   content: "";
   display: block;
   margin-top: 5pt;
}

STUDENTID {
   display: block;
   font-size: 9pt;
   color: #666666;
   margin-left: 15pt;
   margin-bottom: 4pt;
}

STATUS {
   display: block;
   font-size: 10pt;
   color: #009900;
   margin-left: 15pt;
   margin-bottom: 4pt;
}

EMAIL {
   display: block;
   font-size: 9pt;
   color: #666666;
   margin-left: 15pt;
   text-decoration: underline;
}
